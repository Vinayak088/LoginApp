<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_otpsubmit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/background_light">
    <LinearLayout
        android:background="#d6d4d4"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="3">
        <Button
            android:id="@+id/b1"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext_transparent"
            android:text="create job"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/b2"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext_transparent"
            android:text="Varify mobile"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"/>
        <Button
            android:padding="10dp"
            android:id="@+id/b3"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="2dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext_transparent"
            android:text="Broadcast job"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        android:background="#fff3d6">
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restorant/Cafe Executive"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/b4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="Hide Job"
            android:layout_marginTop="15dp"
            android:background="#fff3d6"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark" />
    </LinearLayout>



    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Varify Mobile and Register"
        android:textStyle="bold"
        android:textSize="25dp"
        android:padding="20dp"
        android:gravity="center_horizontal" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OTP sent to:"
        android:padding="20dp"
        android:gravity="center"
        android:textSize="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/b6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="change/Edit number"
            android:background="#ffffff"
            android:layout_weight="1"
            android:textColor="#fe3565"/>
        <Button
            android:id="@+id/b7"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resend OTP"
            android:background="#ffffff"
            android:textColor="#fe3565"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"
        android:layout_margin="20dp"></View>
    <EditText
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter 6 digit code"
        android:inputType="phone"
        android:id="@+id/editText1"
        android:layout_marginLeft="10dp" />
    <Button
        android:padding="10dp"
        android:id="@+id/b5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="SEND OTP"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="20dp"/>


</LinearLayout>
