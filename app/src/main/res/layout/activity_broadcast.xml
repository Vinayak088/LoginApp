<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_broadcast"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:background="#d6d4d4"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="3">
        <Button
            android:id="@+id/b1"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext_transparent"
            android:text="create job"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/b2"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext_transparent"
            android:text="Varify mobile"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"/>
        <Button
            android:padding="10dp"
            android:id="@+id/b3"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="2dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext_transparent"
            android:text="Broadcast job"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:background="#fff3d6">
        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Restorant/Cafe Executive"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Indiranagar,Bangalore"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="20dp" />
        <TextView
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Greet guests. Take order. Operate cash machine.
Make coffee. Serve coffee and prepared food.
Clean and maintain shop."/>

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="200dp"
    android:orientation="horizontal">
    <Button
        android:layout_weight="1"
        android:id="@+id/b4"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:text="Broadcast now"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:textColor="#ffffff"
        android:textSize="15dp"/>
    <Button
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:id="@+id/b5"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:text="Broadcast later"
        android:textColor="#ffffff"
        android:padding="5dp"
        android:textSize="15dp"/>
</LinearLayout>
</LinearLayout>
